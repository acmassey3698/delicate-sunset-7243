<h1>Flights</h1>

<ul>
  <% @flights.each do |flight| %>
    <div id="flight-<%=flight.id%>">
      <li><%="#{flight.number} #{flight.airline.name}"%></li>
      Passengers:<br>
      <ul>
        <% flight.passengers.each do |passenger| %>
         <li><%= passenger.name %><%= button_to "Remove #{passenger.name}", flight_passenger_path(flight, passenger), method: :delete %></li>
        <% end %><br><br>
      </ul>
    </div>
  <% end %>
</ul>
